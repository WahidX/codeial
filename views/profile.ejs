<link rel="stylesheet" href="/css/profile.css">

<!-- Checking if logged in user is same as the profile user -->

<div id="profile-container">
    <img src="<%= user.avatar %>" alt="<%= user.name %>" width="100" height="100">
    <% if(profile_user.id == user.id){ %>
        <form id="update-form" action="/user/user_update/<%= user.id %>" enctype="multipart/form-data" method="POST">
            <input type="text" name="name" placeholder="Your name" value="<%= user.name %>">
            <input type="text" name="email" placeholder="Your email" value="<%= user.email %>">
            <input type="file" name="avatar" placeholder="Profile picture">
            <br>
            <button type="submit" value="Update">Update</button>
        </form>
    <% } else { %>
        <div id="details">
            <h1> NAME: <%= profile_user.name %> </h1>
            <p> EMAIL: <%= profile_user.email %> </p>
        </div>
    <% } %>
</div>